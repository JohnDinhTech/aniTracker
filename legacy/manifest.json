{
    "manifest_version": 2,
    "name": "Weeb Track",
    "version": "0.0.1",
    "description": "Keeps track of what episode you are on",
    "author": "John Duy Dinh",
    "permissions": ["declarativeContent", "tabs", "storage", "activeTab"],
    "icons": {
        "48": "./images/aniTracker32.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "32": "./images/aniTracker32.png"
        },
        "default_popup": "./popup.html"
    }
}
